<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Candidate Information Fields -->
    <EditText
        android:id="@+id/rec_edit_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/rec_hint_name"
        android:padding="8dp" />

    <EditText
        android:id="@+id/rec_edit_last_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/rec_hint_last_name"
        android:padding="8dp" />

    <EditText
        android:id="@+id/rec_edit_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/rec_hint_phone"
        android:inputType="phone"
        android:padding="8dp" />

    <EditText
        android:id="@+id/rec_edit_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/rec_hint_email"
        android:inputType="textEmailAddress"
        android:padding="8dp" />

    <EditText
        android:id="@+id/rec_edit_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/rec_hint_address"
        android:padding="8dp" />

    <EditText
        android:id="@+id/rec_edit_country"
        android:layout_width="379dp"
        android:layout_height="wrap_content"
        android:hint="@string/rec_hint_country"
        android:padding="8dp" />

    <Spinner
        android:id="@+id/rec_spinner_roles"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp" />

    <!-- Image Selection Section -->
    <ImageView
        android:id="@+id/image_view_photo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:contentDescription="@string/selected_image_preview"
        android:scaleType="centerCrop"
        app:srcCompat="@android:drawable/ic_menu_camera" />

    <Button
        android:id="@+id/button_choose_photo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/choose_photo" />

    <Button
        android:id="@+id/rec_button_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/rec_button_save" />
</LinearLayout>
