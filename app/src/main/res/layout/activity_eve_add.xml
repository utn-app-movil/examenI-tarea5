<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Campo: Nombre del Evento -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Nombre:"
                android:textSize="16sp"
                android:gravity="center_vertical"
                android:layout_marginEnd="8dp" />

            <EditText
                android:id="@+id/etEventName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:hint="Ejemplo: Concierto de Rock"
                android:inputType="textPersonName" />
        </LinearLayout>

        <!-- Campo: Lugar del Evento -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Lugar:"
                android:textSize="16sp"
                android:gravity="center_vertical"
                android:layout_marginEnd="8dp" />

            <EditText
                android:id="@+id/etEventLocation"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:hint="Ejemplo: Auditorio Nacional"
                android:inputType="text" />
        </LinearLayout>

        <!-- Campo: Fecha del Evento -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Fecha:"
                android:textSize="16sp"
                android:gravity="center_vertical"
                android:layout_marginEnd="8dp" />

            <EditText
                android:id="@+id/etEventDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:hint="YYYY-MM-DD"
                android:inputType="date" />
        </LinearLayout>

        <!-- Campo: Hora del Evento -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Hora:"
                android:textSize="16sp"
                android:gravity="center_vertical"
                android:layout_marginEnd="8dp" />

            <EditText
                android:id="@+id/etEventTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:hint="HH:mm"
                android:inputType="time" />
        </LinearLayout>

        <!-- Campo: Tipo de Evento -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Tipo:"
                android:textSize="16sp"
                android:gravity="center_vertical"
                android:layout_marginEnd="8dp" />

            <Spinner
                android:id="@+id/spEventType"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2" />
        </LinearLayout>

        <!-- BotÃ³n Guardar -->
        <Button
            android:id="@+id/btnSaveEvent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#FF9800"
            android:text="Guardar Evento"
            android:textColor="@android:color/white" />
    </LinearLayout>
</ScrollView>
