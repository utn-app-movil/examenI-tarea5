<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/vac_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/vac_name_hint" />

        <EditText
            android:id="@+id/vac_last_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/vac_last_name_hint" />

        <EditText
            android:id="@+id/vac_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/vac_phone_hint"
            android:inputType="phone" />

        <EditText
            android:id="@+id/vac_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/vac_email_hint"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/vac_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/vac_address_hint" />

        <EditText
            android:id="@+id/vac_country"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/vac_country_hint" />

        <EditText
            android:id="@+id/vac_vaccine_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/vac_vaccine_type_hint" />

        <EditText
            android:id="@+id/vac_vaccination_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/vac_vaccination_date_hint"
            android:focusable="false"
            android:clickable="true" />

        <EditText
            android:id="@+id/vac_vaccination_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/vac_vaccination_time_hint"
            android:focusable="false"
            android:clickable="true" />

        <ImageView
            android:id="@+id/vac_imgPhoto"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:contentDescription="@string/vac_photo"
            android:scaleType="centerCrop" />

        <Button
            android:id="@+id/vac_btnSelectPhoto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/vac_select_photo" />

        <Button
            android:id="@+id/vac_btn_save_vaccination"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/vac_btn_save" />

    </LinearLayout>
</ScrollView>
