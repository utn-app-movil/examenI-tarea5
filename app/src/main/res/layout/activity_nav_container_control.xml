<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".nav_Container_control">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="371dp"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Número del Contenedor -->
        <TableRow>

            <TextView
                android:id="@+id/label_container_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nav_id_container" />

            <EditText
                android:id="@+id/nav_contNum"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/nav_id_container"
                android:inputType="text" />
        </TableRow>

        <!-- Persona que realizó el mantenimiento -->
        <TableRow>

            <TextView
                android:id="@+id/label_person_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nav_nomPers" />

            <EditText
                android:id="@+id/nav_person"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/nav_nomPers"
                android:inputType="text" />
        </TableRow>

        <!-- Fecha del mantenimiento -->
        <TableRow>

            <TextView
                android:id="@+id/txt_day"
                android:layout_width="173dp"
                android:layout_height="wrap_content"
                android:text="@string/nav_day" />

        </TableRow>

        <!-- Hora del mantenimiento -->
        <TableRow />

        <!-- Tipo de Contenedor -->
        <TableRow>

            <TextView
                android:id="@+id/nav_typeCont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nav_spinner" />

            <Spinner
                android:id="@+id/nav_Spiner"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:entries="@array/container_types" />
        </TableRow>

        <!-- Temperatura del Contenedor -->
        <TableRow>

            <TextView
                android:id="@+id/label_temperature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nav_temperature" />

            <EditText
                android:id="@+id/nav_temp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/nav_temperature"
                android:inputType="numberDecimal" />
        </TableRow>

        <!-- Peso del Contenedor -->
        <TableRow>

            <TextView
                android:id="@+id/label_weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nav_weigth" />

            <EditText
                android:id="@+id/nav_weight"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/nav_weigth"
                android:inputType="numberDecimal" />
        </TableRow>

        <!-- Producto en el Contenedor -->
        <TableRow>

            <TextView
                android:id="@+id/label_product"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nav_Product" />

            <EditText
                android:id="@+id/nav_product"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/nav_Product"
                android:inputType="text" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:id="@+id/nav_btn_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nav_btn_img" />

            <ImageView
                android:id="@+id/nav_imagev"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:srcCompat="@tools:sample/avatars" />
        </TableRow>

    </TableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>