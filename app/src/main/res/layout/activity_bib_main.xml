<!-- activity_bib_main.xml -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/bg_gradient_main">

    <!-- Encabezado con Título -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        app:cardElevation="6dp"
        app:cardCornerRadius="12dp"
        android:backgroundTint="@color/primaryColor"
        android:padding="16dp">

        <TextView
            android:id="@+id/bib_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="sans-serif-medium"
            android:text="@string/bib_title"
            android:textColor="@android:color/white"
            android:textSize="28sp"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>

    <!-- Botón de Ver Reservas -->
    <Button
        android:id="@+id/bib_btn_view_reservations"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_button_secondary"
        android:elevation="4dp"
        android:fontFamily="sans-serif-medium"
        android:minHeight="56dp"
        android:text="@string/bib_view_reservations"
        android:textColor="@android:color/white"
        android:textSize="18sp" />

    <!-- Botón de Añadir Nueva Reserva -->
    <Button
        android:id="@+id/bib_btn_add_reservation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_button_primary"
        android:elevation="4dp"
        android:fontFamily="sans-serif-medium"
        android:minHeight="56dp"
        android:text="@string/bib_add_new_reservation"
        android:textColor="@android:color/white"
        android:textSize="18sp" />
</LinearLayout>
