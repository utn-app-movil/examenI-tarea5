<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">


    <!-- res/layout/item_container.xml -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.211">

        <!-- Foto del contenedor -->
        <ImageView
            android:id="@+id/imgitem_foto"
            android:layout_width="100dp"
            android:layout_height="100dp"
            tools:srcCompat="@tools:sample/avatars" />

        <!-- Información del contenedor -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Nombre de la persona -->
            <TextView
                android:id="@+id/item_txtNamePer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nav_nomPers"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- Número de contenedor -->
            <TextView
                android:id="@+id/item_txtContainerNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nav_id_container"
                android:textSize="14sp" />

            <!-- Fecha del contenedor -->
            <TextView
                android:id="@+id/item_txtDay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nav_day"
                android:textSize="14sp" />

            <!-- Producto en el contenedor -->
            <TextView
                android:id="@+id/item_txtProduct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nav_Product"
                android:textSize="14sp" />

            <!-- Spinner -->
            <TextView
                android:id="@+id/item_txtSpinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nav_spinner"
                android:textSize="14sp" />

            <!-- Temperatura del contenedor -->
            <TextView
                android:id="@+id/item_txtTemp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nav_temperature"
                android:textSize="14sp" />

            <!-- Peso del contenedor -->
            <TextView
                android:id="@+id/item_txtWeight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nav_weigth"
                android:textSize="14sp" />

        </LinearLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>