<!-- reservation_item.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/reservation_item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_rounded_white"
    android:padding="16dp"
    android:elevation="2dp"
    android:layout_margin="8dp">

    <TextView
        android:id="@+id/txt_student_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bib_student_name"
        android:textStyle="bold"
        android:textColor="@color/primaryTextColor"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/txt_book_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bib_book_name"
        android:textColor="@color/secondaryTextColor"
        android:textSize="14sp"
        android:layout_marginTop="4dp" />

    <TextView
        android:id="@+id/txt_reservation_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bib_reservation_date"
        android:textColor="@color/secondaryTextColor"
        android:textSize="14sp"
        android:layout_marginTop="4dp" />
</LinearLayout>